<!DOCTYPE html>
<html>
  <head>
    <title>Unit-2-Assessment</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1>To Do List</h1>
    <ul>
      <% if (todos.length) { %> <% todos.forEach(function(t) { %>
      <li>
        <%= t.todo %> - <%= t.done ? 'done' : 'not done' %>
        <form
          action="/<%= t.id %>?_method=DELETE"
          class="delete-form"
          method="POST"
        >
          <button type="submit">Delete To Do</button>
        </form>
      </li>
      <% }); %>
    </ul>
    <% } else { %>
    <h3>There are no To Dos yet !</h3>
    <% } %>
    <hr />
    <form action="/" method="POST" autocomplete="off">
      <input type="text" name="todo" required />
      <button type="submit">Add To Do</button>
    </form>
  </body>
</html>
